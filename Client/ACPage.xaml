<Page x:Class="Client.ACPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ACPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBlock FontSize="32" HorizontalAlignment="Center" Grid.Row="0" Grid.ColumnSpan="2">Przetwornik A/C</TextBlock>
        <StackPanel Grid.Row="1" Grid.Column="0"> 
            <TextBlock HorizontalAlignment="Center">Nagrywanie</TextBlock>
            <ComboBox x:Name="RecordingDevicesSelector">
                
            </ComboBox>
            <Button Content="Nagrywaj"/>
            <Button Content="Zapisz"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1"></StackPanel>

    </Grid>

</Page>
