<Page x:Class="Client.XModemPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="XModemPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <TextBlock HorizontalAlignment="Center" FontSize="24">Odbieranie</TextBlock>
            <ComboBox x:Name="ComPortsSelector1">
                
            </ComboBox>
            
            <TextBlock x:Name="ReceiverTextBlock" Margin="15,15,15,15"></TextBlock>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBlock HorizontalAlignment="Center" FontSize="24">Wysyłanie</TextBlock>
            <ComboBox x:Name="ComPortsSelector2">

            </ComboBox>
            <RichTextBox Margin="15,15,15,15"></RichTextBox>
        </StackPanel>
    </Grid>
</Page>
